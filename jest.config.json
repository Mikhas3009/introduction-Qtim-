{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
        "<rootDir>/test"
    ],
    "moduleFileExtensions": [
        "ts",
        "js",
        "json"
    ],
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
        "**/*.test.ts"
    ],
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/src/$1"
    }
}